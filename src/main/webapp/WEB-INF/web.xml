<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <listener>
      <listener-class>com.github.helloiampau.hibernate.utils.DBSessionHandler</listener-class>
  </listener>
  <servlet>
      <servlet-name>User Resource</servlet-name>
      <servlet-class>com.github.helloiampau.hibernate.UserResource</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>User Resource</servlet-name>
      <url-pattern>/user/*</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>Profile Resource</servlet-name>
      <servlet-class>com.github.helloiampau.hibernate.ProfileResource</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>Profile Resource</servlet-name>
      <url-pattern>/profile/*</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>Item Resource</servlet-name>
      <servlet-class>com.github.helloiampau.hibernate.ItemResource</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>Item Resource</servlet-name>
      <url-pattern>/item/*</url-pattern>
  </servlet-mapping>
  <servlet>
      <servlet-name>Purchase Resource</servlet-name>
      <servlet-class>com.github.helloiampau.hibernate.PurchaseResource</servlet-class>
  </servlet>
  <servlet-mapping>
      <servlet-name>Purchase Resource</servlet-name>
      <url-pattern>/purchase/*</url-pattern>
  </servlet-mapping>
</web-app>
